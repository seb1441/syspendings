<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Who</th>
      <th>Description</th>
      <th>Split</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.date %></td>
        <td><%= record.who %></td>
        <td><%= record.description %></td>
        <td><%= record.split ? "Yes" : "No"  %></td>
        <td><%= '%.2f' % record.price %>$</td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Delete', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

