<%= form_with(model: record, local: true) do |form| %>
  <% if record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(record.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
      <% record.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :record_date %>
  </div>

  <div class="field">
    <%= form.label :who %>
    <%#= form.text_field :who, id: :record_who %>
    <%= form.select :who, ['Seb', 'Yuki']%>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :record_description %>
  </div>

  <div class="field">
    <%= form.label :split %>
    <%= form.check_box :split, id: :record_split %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id: :record_price %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment, id: :record_comment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
